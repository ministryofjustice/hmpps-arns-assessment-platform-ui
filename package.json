{
  "name": "hmpps-arns-assessment-platform-ui",
  "version": "0.0.1",
  "description": "HMPPS Arns Assessment Platform Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-arns-assessment-platform-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "hmpps-precommit-hooks-prepare",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.js",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "node esbuild/esbuild.js --watch",
    "start-feature": "node $NODE_DEBUG_OPTION --env-file=feature.env dist/server.js | bunyan -o short",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "npx playwright test",
    "int-test-ui": "npx playwright test --ui",
    "int-test-init:ci": "npx playwright install",
    "clean": "rm -rf dist test_results",
    "rebuild": "npm run clean && npm i && npm run build",
    "precommit:secrets": "gitleaks git --pre-commit --redact --staged --verbose --config .gitleaks/config.toml",
    "precommit:lint": "node_modules/.bin/lint-staged",
    "precommit:verify": "npm run typecheck && npm test"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.863.0",
    "@ministryofjustice/frontend": "^7.1.0",
    "@ministryofjustice/hmpps-audit-client": "^1.1.1",
    "@ministryofjustice/hmpps-auth-clients": "^0.0.1",
    "@ministryofjustice/hmpps-monitoring": "^0.0.1",
    "@ministryofjustice/hmpps-rest-client": "^0.0.1",
    "applicationinsights": "^2.9.7",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.11.1",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^5.8.0",
    "superagent": "^10.2.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.3",
    "@ministryofjustice/hmpps-precommit-hooks": "^0.0.3",
    "@playwright/test": "^1.56.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.17.0",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "^0.25.8",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "glob": "^11.0.3",
    "jest": "^30.0.5",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.1.4",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.9",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
